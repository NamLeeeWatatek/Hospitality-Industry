<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_vehicle_status_wizard_form" model="ir.ui.view">
        <field name="name">vehicle.status.wizard.form</field>
        <field name="model">vehicle.status.wizard</field>
        <field name="arch" type="xml">
            <form string="Thay đổi trạng thái xe">
                <group>
                    <field name="vehicle_id" required="1"/>
                    <field name="status" required="1"/>
                </group>
                <footer>
                    <button string="Xác nhận" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Hủy" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
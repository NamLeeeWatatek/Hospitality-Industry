<odoo>
    <record id="view_res_config_settings_serial_number" model="ir.ui.view">
        <field name="name">res.config.settings.serial.number</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[contains(@class, 'settings')]" position="inside">
                <div class="app_settings_block" data-string="Auto Serial Number">
                    <h2>Auto Serial Number Settings</h2>
                    <div class="row mt16">
                        <div class="col-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="serial_prefix"/>
                            </div>
                        </div>
                        <div class="col-12 col-md-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <field name="serial_padding"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
